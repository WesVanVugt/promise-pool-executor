{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "sourceMaps": true,
            "stopOnEntry": false,
            "preLaunchTask": "tsc",
            "console": "internalConsole",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["js/test/*.js", "--reporter", "spec", "--colors"],
            "outFiles": [
                "${workspaceRoot}/js/**/*.js"
            ]
        }
    ]
}